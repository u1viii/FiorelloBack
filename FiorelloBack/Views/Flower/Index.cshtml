@model List<Flower>
@{
    ViewData["Title"] = "Index";
}

<section id="products">
    <div class="container">
        <div class="row">
            @await Html.PartialAsync("_FlowerPartialView", Model)
        </div>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center">

        <nav aria-label="...">
            <ul class="pagination" style="justify-content:center">
                @if (ViewBag.CurrentPage == 1)
                {
                    <li class="page-item disabled">

                        <a class="page-link" asp-controller="flower" asp-action="index" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                    </li>

                }

                else
                {
                    <li class="page-item ">
                        <a class="page-link" asp-controller="flower" asp-action="index" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= ViewBag.TotalPage; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")" style="@(ViewBag.CurrentPage == i ? "pointer-events:none" : "")"><a asp-controller="flower" asp-action="index" asp-route-page="@i" class="page-link">@i</a></li>
                }

                @if (ViewBag.CurrentPage == ViewBag.TotalPage)
                {
                    <li class="page-item disabled">
                        <a class="page-link" asp-controller="flower" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage)">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="flower" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
                    </li>
                }


            </ul>
        </nav>
    </div>
</div>
